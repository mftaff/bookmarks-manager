<div class="body-content">
    <div class="bookmark-show">
        <h4>
            <%= render partial: 'likes/like', locals: { topic: @bookmark.topic, bookmark: @bookmark } %>
            <%= link_to @bookmark.url, "#{@bookmark.url}" , target: :_blank %>
        </h4>
        
        <div class="edit-delete">
            <%= link_to "edit", edit_topic_bookmark_path, class: "btn btn-info btn-sm" %>
            <%= link_to "delete", topic_bookmark_path, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to remove this Bookmark?" } %>
        </div>
    </div>
</div>
